@page "/"
@using BloggBlazorServer.Services

<PageTitle>Velkommen til Min Blogg</PageTitle>

<h1>Velkommen til Min Blogg!</h1>

<p>
    Dette er din egen bloggplattform. Start å skriv og del dine tanker med verden!
</p>

@if (!UserStateService.IsLoggedIn)
{
    <p>
        Har du ikke en blogg ennå?
        <button @onclick="GoToRegistrationPage" class="btn btn-primary">Opprett en nå</button>.
    </p>
}

<p>
    Utforsk andres blogger og la deg inspirere.
</p>

@code {
    [Inject] private NavigationManager Navigation { get; set; }
    [Inject] private UserStateService UserStateService { get; set; }

    private void GoToRegistrationPage()
    {
        Navigation.NavigateTo("/register");
    }
}
